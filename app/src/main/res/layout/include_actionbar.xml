<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/actionbar"
    android:layout_width="match_parent"
    android:layout_height="49dp"
    android:paddingTop="1dp"
    android:orientation="horizontal"
    android:background="@color/actionbar_bg">

    <LinearLayout
        android:id="@+id/backll"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/backB"
            android:layout_width="10dp"
            android:layout_height="20dp"
            android:layout_marginLeft="0dp"
            android:background="@drawable/btn_back" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="23sp" >
    </TextView>

    <LinearLayout
        android:id="@+id/settingll"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/settingB"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:textSize="17sp"
            android:text="4444"
            android:textColor="@color/white"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/upphotoll"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        
        <ImageView
            android:id="@+id/upphotoB"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/btn_upload_photo" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_actionbar_share"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">
        
        <ImageView
            android:id="@+id/iv_actionbar_share"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/btn_share" />

    </LinearLayout>
    
    <include
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        layout="@layout/include_interval_grey_15" />
    
</RelativeLayout>